{
  "compilerOptions": {
    "baseUrl": ".",
	  "outDir": "./tmp",
    "module": "ESNext",
    "noImplicitAny": true,
    "target": "ESNext",
    "pretty": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "sourceMap": true,
    "strict": false,
    "noErrorTruncation": true
  },
  "exclude": [
    "node_modules", 
    "./dist/**/*", 
    "./tmp/**/*", 
    "rollup.config.ts"
  ],
  "include": ["./*.ts"]
}

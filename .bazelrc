# See: https://docs.bazel.build/versions/master/user-manual.html#bazelrc.

# https://docs.bazel.build/versions/master/skylark/performance.html#memory-profiling
startup --host_jvm_args=-Xmx3g

# Disabled due to an issue with bazel-zig-cc that should be filed upstream.
# Instead, glob(allow_empty = False,) needs to be sprinkled everywhere.
# build --incompatible_disallow_empty_glob
build --verbose_failures

# Prevent host ENV from being exposed to bazel, aside from what is explicitly
# allowed via --action_env=...
build --incompatible_strict_action_env

# Pass PATH, CC, CXX and LLVM_CONFIG variables from the environment.
build --action_env=CC --host_action_env=CC
build --action_env=CXX --host_action_env=CXX
build --action_env=LLVM_CONFIG --host_action_env=LLVM_CONFIG
build --action_env=PATH --host_action_env=PATH

# Ensure we use only hermetic toolchains and not what is discovered on PATH.
# build --action_env=BAZEL_DO_NOT_DETECT_CPP_TOOLCHAIN=1

# Setup zig-cc toolchains
build:zig-cc --incompatible_enable_cc_toolchain_resolution
build:zig-cc --extra_toolchains @zig_sdk//toolchain:x86_64-linux-musl
build:zig-cc --extra_toolchains @zig_sdk//toolchain:aarch64-linux-musl
build:zig-cc --extra_toolchains @zig_sdk//toolchain:x86_64-macos-gnu
build:zig-cc --extra_toolchains @zig_sdk//toolchain:aarch64-macos-gnu

# Enable position independent code (this is the default on macOS and Windows)
# Workaround for https://github.com/bazelbuild/rules_foreign_cc/issues/421
build:linux --copt=-fPIC

build:zig-linux-x86_64 --config=linux
build:zig-linux-x86_64 --config=zig-cc
build:zig-linux-x86_64 --platforms @zig_sdk//platform:linux_x86_64

build:zig-linux-aarch64 --config=linux
build:zig-linux-aarch64 --config=zig-cc
build:zig-linux-aarch64 --platforms @zig_sdk//platform:linux_aarch64

build:zig-macos-x86_64 --config=zig-cc
build:zig-macos-x86_64 --platforms @zig_sdk//platform:macos_x86_64

build:zig-macos-aarch64 --config=zig=cc
build:zig-macos-aarch64 --platforms @zig_sdk//platform:macos_aarch64

# Any personal configuration settings should go in a gitignored .bazelrc.local
try-import %workspace%/.bazelrc.local

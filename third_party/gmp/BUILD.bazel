load("@rules_foreign_cc//foreign_cc:defs.bzl", "configure_make")

filegroup(
    name = "srcs",
    srcs = glob(["**"], allow_empty = False),
)

configure_make(
    name = "gmp",
    args = [
        "--jobs=`nproc`",
    ],
    configure_options = [
        "--disable-cxx",
    ] + select({
        "@urbit//:linux-aarch64": ["--host=aarch64"],
        "//conditions:default": [],
    }),
    lib_name = "libgmp",
    lib_source = ":srcs",
    out_static_libs = ["libgmp.a"],
    visibility = ["//visibility:public"],
)

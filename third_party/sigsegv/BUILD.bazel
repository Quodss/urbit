load("@rules_foreign_cc//foreign_cc:defs.bzl", "configure_make")

filegroup(
    name = "srcs",
    srcs = glob(
        ["**"],
        allow_empty = False,
    ),
)

configure_make(
    name = "sigsegv",
    args = ["--jobs=`nproc`"],
    autoconf = True,
    autoreconf = True,
    configure_in_place = True,
    configure_options = select({
        "@urbit//:linux-aarch64": ["--host=aarch64"],  # Why --host, not --target?
         "@urbit//:macos": ["ARFLAGS=r"],
         "//conditions:default": [],
        }),
    env = select({
        "@urbit//:macos": {"AR": ""},
        "//conditions:default": {},
    }),
    lib_source = ":srcs",
    out_static_libs = select({
        "@urbit//:windows-x86_64": ["libsigsegv.lib"],
        "//conditions:default": ["libsigsegv.a"],
    }),
    visibility = ["//visibility:public"],
)
